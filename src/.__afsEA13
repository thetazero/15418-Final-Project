#ifndef MINIMAX_RESULT_H
#define MINIMAX_RESULT_H

#include <vector>
#include <utility>

typedef struct MinimaxResult {
  int score;
  vector<pair<int, int>> moves; // store the variation 
} MinimaxResult;

void print_line(MinimaxResult &line) {
  cout << line.score << ": ";
  for (auto &move : line.moves) {
    int r = move.first;
    int c = move.second;
    cout << "(" << r << "," << c << ") ";
  }
  cout << endl;
}

#endif